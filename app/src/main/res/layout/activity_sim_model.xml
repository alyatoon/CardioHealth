<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green1"
    tools:context=".SimModelActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="69dp">


    <TextView
        android:id="@+id/txtResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/hijau"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/btnCheck"
        app:layout_constraintStart_toStartOf="@id/btnCheck"
        app:layout_constraintTop_toBottomOf="@id/btnCheck" />

    <TextView
        android:layout_width="430dp"
        android:layout_height="120dp"
        android:text="Simulasi Model"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/gogreen"
        android:layout_marginTop="35dp"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/BP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:ems="15"
        android:hint="BP ( 94-200 )"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="@color/hijau"
        android:textColorHint="@color/hijau"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/Cholesterol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="15"
        android:hint="Cholesterol ( 126-564 )"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="@color/hijau"
        android:textColorHint="@color/hijau"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BP"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/EKGresults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="15"
        android:hint="EKGresults ( 0-2 )"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="@color/hijau"
        android:textColorHint="@color/hijau"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Cholesterol"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/MaxHR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ems="15"
        android:hint="MaxHR ( 71-202 ) "
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="@color/hijau"
        android:textColorHint="@color/hijau"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EKGresults"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/Exerciseangina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="15"
        android:hint="Exerciseangina ( 0-1 )"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="@color/hijau"
        android:textColorHint="@color/hijau"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MaxHR"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/STdepression"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="15"
        android:hint="STdepression ( 0-6.2 )"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="@color/hijau"
        android:textColorHint="@color/hijau"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Exerciseangina"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/SlopeofST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="15"
        android:hint="SlopeofST ( 1-3 )"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="@color/hijau"
        android:textColorHint="@color/hijau"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/STdepression"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/Thallium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="15"
        android:hint="Thallium ( 3-7 )"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="@color/hijau"
        android:textColorHint="@color/hijau"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SlopeofST"
        tools:ignore="HardcodedText" />


    <Button
        android:id="@+id/btnCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Predict"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Thallium"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>
